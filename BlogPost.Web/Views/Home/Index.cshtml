@model IList<PostDetailsViewModel>

@{
    ViewData["Title"] = "BlogList";
}

<div class="jumbotron">
    <div class="col-sm-8 mx-auto">

    </div>
</div>

<div class="row">
    <div class="col-md-8 blog-main">
        <div class="card-body bg-light">
            <h4>List last posts</h4>

            @foreach (var post in Model)
            {
                <div class="media">
                    <div class="media-body">
                        <button type="button" class="btn btn-default" aria-label="Left Align">
                            <span class="" aria-hidden="true"></span>
                        </button>
                        <small class="float-right text-navy text-muted">@post.CreatedAt</small>
                        <p class="text-muted">
                            <a asp-controller="Posts" asp-action="PostDetails" asp-route-id="@post.Id"> @post.Title</a>
                        </p>
                        <small class="float-right text-navy text-muted">by: <a href="#">@post.User.UserName</a></small>
                    </div>
                </div>
                <hr class="clearfix" />
            }
        </div>
    </div><!-- /.blog-main -->

    <div class="card-body col-md-4 p-0 m-0">
        <div class="card-body bg-light">
            @await Component.InvokeAsync("Blogs")
        </div>

    </div>

</div><!-- /.row -->
