@model PostViewModel

@{
    ViewData["Title"] = "DeletePost";
}

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="card-body bg-light">
        <div class="media-body">
            <small class="float-right text-navy text-muted">@Model.CreatedAt</small>
            <p class="text-muted"><strong>@Model.Title</strong></p>
        </div>
        <form asp-action="ConfirmDeletePost">
            <a asp-controller="Posts" asp-action="ConfirmDeletePost" asp-route-id="@Model.Id" class="float-left btn btn-link">Delete</a>
        </form>
    </div>
</div><!-- /.row -->